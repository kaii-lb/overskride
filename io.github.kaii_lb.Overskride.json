{
    "app-id" : "io.github.kaii_lb.Overskride",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "overskride",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--allow=bluetooth",
        "--socket=system-bus",
        "--socket=session-bus",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "overskride=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
          "name": "blueprint-compiler",
          "buildsystem": "meson",
          "cleanup": ["*"],
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
              "tag": "v0.10.0"
            }
          ]
        },
        {
            "name" : "overskride",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
              "-Dbuildtype=release"
            ],
            "sources" : [
                {
                    "type" : "git",
					"url" : "https://github.com/kaii-lb/overskride.git",
                    "branch" : "ci-test"
                }
            ]
        }
    ]
}
